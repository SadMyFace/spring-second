<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.myweb.www.repository.BoardDAO">
  	
  	<insert id="register">
  		insert into board(title, writer, content) 
  			values(#{title}, #{writer}, #{content})
  	</insert>
  	
  	<select id="getList" resultType="com.myweb.www.domain.BoardVO">
  		select * from board order by bno desc limit #{pageStart}, #{qty}
  	</select>
  	
  	<update id="updateReadCount">
  		update board set read_count = read_count + 1 where bno = #{bno}
  	</update>
  	
  	<select id="getDetail" resultType="com.myweb.www.domain.BoardVO">
  		select * from board where bno = #{bno}
  	</select>
  	
  	<update id="modify">
  		update board set title = #{title}, writer = #{writer}, content = #{content}, mod_at = now(), read_count = read_count - 2 where bno = #{bno}
  	</update>
  	
  	<delete id="remove">
  		delete from board where bno = #{bno}
  	</delete>
  	
  	<select id="getTotalCount" resultType="int">
  		select count(bno) from board
  	</select>
  	
  </mapper>